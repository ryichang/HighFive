<div class="profile-header text-center">
<div class="panel-heading" style="background-image: url(http://i.imgur.com/YoRr1sU.jpg)">
  <div class="container">
    <div class="panel-heading">
    <%= image_tag @user.avatar.url(:medium), class:"circular" %>
    </div>
      <h3 class="profile-header-user"><%= @user[:first_name] %> <%= @user[:last_name] %></h3>
      <p class="profile-header-bio">
        <p>Join Date:<small><%= time_ago_in_words(@user.created_at)%> ago</small></p>
      </p>
      </div>
    
  </div>
			
			
    		<%=link_to "Edit profile", user_path, class:"edit" %> 
    		  <div>
    		  	<%= form_for [@user, @compliment] do |f| %>
    				<%= f.text_field :comment, placeholder: "Description" %>
    				<%= f.submit "Compliment!" %>
    			<% end %>
  			  </div>

    		<p class="text-center"><%= button_to "Add New Post", user_id: @user.id, :method => 'get', class:"btn btn-info" %></p> 
    		</div>
    		</div>
		</div>
		<div id="profile-data" class="col-sm-offset-5 col-sm-6">
			<h2>Compliments</h2>
			<% @user.compliments_received.each do |compliment| %>
			<%= User.find(compliment.complimentor_id).first_name %>
			<li><%= compliment.comment %></li>
			<% end %>
  		</div>
	</div>
</div>



